# Blockchain Environment Variables
# Copy this file to .env and fill in your values

# Ethereum Sepolia Testnet
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Polygon Mumbai Testnet (Alternative)
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY

# Deployment Wallet
PRIVATE_KEY=your_wallet_private_key_without_0x_prefix

# Gas Reporting (optional)
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Contract Address (will be auto-populated after deployment)
CONTRACT_ADDRESS=

# Notes:
# 1. Get Sepolia testnet ETH from: https://sepoliafaucet.com/
# 2. Get Mumbai testnet MATIC from: https://faucet.polygon.technology/
# 3. Get Infura API key from: https://infura.io/
# 4. Get Etherscan API key from: https://etherscan.io/apis
# 5. Never commit your actual .env file to git!
